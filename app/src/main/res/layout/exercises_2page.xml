<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/container1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:background="@drawable/fon_for_other">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="250dp"
            android:layout_marginBottom="10dp">

            <LinearLayout
                android:id="@+id/container3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="80dp"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:text="@string/choice1"
                    android:background="@drawable/button_exersize"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_marginStart="40dp"
                    android:layout_marginEnd="40dp"
                    android:gravity="center"
                    android:layout_marginBottom="30dp"/>

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:text="@string/choice2"
                    android:background="@drawable/button_exersize"
                    android:textColor="@color/white"
                    android:layout_marginStart="40dp"
                    android:layout_marginEnd="40dp"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginBottom="30dp"/>

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:text="@string/choice3"
                    android:background="@drawable/button_exersize"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_marginStart="40dp"
                    android:layout_marginEnd="40dp"
                    android:gravity="center"
                    android:layout_marginBottom="30dp"/>

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:text="@string/choice4"
                    android:background="@drawable/button_exersize"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_marginStart="40dp"
                    android:layout_marginEnd="40dp"
                    android:gravity="center"
                    android:layout_marginBottom="4dp"/>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/container4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:backgroundTint="@color/purple_100"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_margin="8dp"
        android:background="@drawable/slyle_toolbar"
        android:orientation="horizontal"
        android:padding="7dp">

        <ImageView
            android:id="@+id/imageArrowBack"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_gravity="start"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="150dp"
            android:clickable="true"
            android:onClick="clickNew"
            app:srcCompat="@drawable/arrow_back" />

        <ImageView
            android:id="@+id/imageQuestionMark"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_gravity="end"
            android:layout_marginEnd="70dp"
            android:clickable="true"
            android:onClick="clickNew"
            app:srcCompat="@drawable/question_mark" />

    </LinearLayout>
</RelativeLayout>